@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

@{
    string colorStyle = "black"; // Standardfarve
    if (currentCount == 8)
    {
        colorStyle = "red"; // Ændrer farven til rød, hvis currentCount er lig med 8
    }
}

@{
    string colorStyle2 = "black"; // Standardfarve
    if (randomNumber == 8)
    {
        colorStyle2 = "red"; // Ændrer farven til rød, hvis currentCount er lig med 8
    }
}

<p>Current count: <a style="color: @colorStyle">@currentCount</a></p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<br/>
<br />
    
<p>Random number between 0 and the current count <a style="color: @colorStyle">@currentCount</a> <br /> Random number: <a style="color: @colorStyle2">@randomNumber</a></p>

@code {
    private int currentCount = 0;
    private int randomNumber = 0; // Variabel til det tilfældige tal
    private Random random = new Random(); //Opretter en ny instans af Random


    private void IncrementCount()
    {
        currentCount++;
        randomNumber = random.Next(currentCount + 1); 

    }
}
